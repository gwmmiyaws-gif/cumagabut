local WindUI

do
    local ok, result = pcall(function()
        return require("./src/Init")
    end)
    
    if ok then
        WindUI = result
    else 
        WindUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/Footagesus/WindUI/main/dist/main.lua"))()
    end
end

local svc = {
    Players = game:GetService("Players"),
    RS = game:GetService("ReplicatedStorage"),
}

local player = svc.Players.LocalPlayer
local hrp = player.Character and player.Character:WaitForChild("HumanoidRootPart") or player.CharacterAdded:Wait():WaitForChild("HumanoidRootPart")

local mods = {
    Net = svc.RS.Packages._Index["sleitnick_net@0.2.0"].net,
}

local api = {
    Events = {
        EquipTool = mods.Net["RE/EquipTool"],
    },
    Functions = {
        ChargeRod = mods.Net["RF/ChargeFishingRod"],
        StartMini = mods.Net["RF/RequestFishingMinigameStarted"],
        CatchFish = mods.Net["RF/CatchFishCompleted"],
        CancelFish = mods.Net["RF/CancelFishingInputs"],
    },
}

local Window = WindUI:CreateWindow({
    Title = "LS Hub - Fish It",
    Author = "developed by Louissxe",
    Folder = "LSHub-FishIt",
    Icon = "rbxassetid://129609617845057",
    Transparent = true,
    IconSize = 12*2,
    NewElements = true,
    Size = UDim2.fromOffset(500, 400),
    ToggleKey = Enum.KeyCode.G,
    User = {
        Enabled = true,
        Anonymous = true,
    },
    HideSearchBar = true,
    OpenButton = {
        Title = "Open LS Hub",
        CornerRadius = UDim.new(0.3,0),
        StrokeThickness = 3,
        Enabled = true,
        Draggable = true,
        OnlyMobile = false,
        Color = ColorSequence.new(
            Color3.fromRGB(107, 49, 255), 
            Color3.fromRGB(215, 48, 221)
        )
    },
    Topbar = {
        Height = 44,
        ButtonsType = "Default",
    },
})

local Fish10 = Window:Tab({
    Title = "Fishing Cycle",
    Icon = "bird",
    Locked = false,
})

local Protected = false
local FishingSession = 0

_G.DelayComplete = 0.001
_G.DelayCycle = 0.05
_G.AutoEquip = true
_G.ParallelMode = false
_G.RapidCalls = 200
_G.SlowCalls = 20

local function IsSessionAlive(session)
    return FishingSession == session
end

local function SpamPattern(session)
    if _G.AutoEquip then
        pcall(api.Events.EquipTool.FireServer, api.Events.EquipTool, 1)
        task.wait(0.3)
    end
    
    while Protected and IsSessionAlive(session) do
        for i = 1, _G.RapidCalls do
            if not IsSessionAlive(session) then return end
            
            local now = workspace:GetServerTimeNow()
            
            task.spawn(function()
                pcall(api.Functions.ChargeRod.InvokeServer, api.Functions.ChargeRod, now + (i * 0.0000001))
            end)
            
            task.spawn(function()
                pcall(api.Functions.StartMini.InvokeServer, api.Functions.StartMini, -1, 1, now + (i * 0.0000001))
            end)
        end
        
        task.wait(_G.DelayComplete * _G.RapidCalls)
        
        for i = 1, _G.SlowCalls do
            if not IsSessionAlive(session) then return end
            
            task.spawn(function()
                pcall(api.Functions.CatchFish.InvokeServer, api.Functions.CatchFish)
            end)
            
            task.spawn(function()
                pcall(api.Functions.CancelFish.InvokeServer, api.Functions.CancelFish)
            end)
        end
        
        task.wait(_G.DelayCycle)
    end
end

local function ParallelSpamPattern(session)
    if _G.AutoEquip then
        pcall(api.Events.EquipTool.FireServer, api.Events.EquipTool, 1)
        task.wait(0.3)
    end
    
    while Protected and IsSessionAlive(session) do
        task.spawn(function()
            for i = 1, _G.RapidCalls do
                if not IsSessionAlive(session) then return end
                
                local now = workspace:GetServerTimeNow()
                
                task.spawn(function()
                    pcall(api.Functions.ChargeRod.InvokeServer, api.Functions.ChargeRod, now)
                end)
                
                task.spawn(function()
                    pcall(api.Functions.StartMini.InvokeServer, api.Functions.StartMini, -1, 1, now)
                end)
            end
        end)
        
        task.spawn(function()
            for i = 1, _G.SlowCalls do
                if not IsSessionAlive(session) then return end
                
                task.spawn(function()
                    if i % 2 == 0 then
                        pcall(api.Functions.CatchFish.InvokeServer, api.Functions.CatchFish)
                    else
                        pcall(api.Functions.CancelFish.InvokeServer, api.Functions.CancelFish)
                    end
                end)
            end
        end)
        
        task.wait(_G.DelayCycle)
    end
end

Fish10:Input({
    Title = "Delay Complete",
    Description = "Delay untuk rapid calls (default: 0.001)",
    Value = tostring(_G.DelayComplete),
    Callback = function(v)
        local n = tonumber(v)
        if n and n >= 0.0001 then
            _G.DelayComplete = n
        end
    end,
})

Fish10:Input({
    Title = "Delay Cycle", 
    Description = "Delay antar cycle (default: 0.05)",
    Value = tostring(_G.DelayCycle),
    Callback = function(v)
        local n = tonumber(v)
        if n and n >= 0 then
            _G.DelayCycle = n
        end
    end,
})

Fish10:Input({
    Title = "Rapid Calls",
    Description = "Jumlah rapid calls per cycle (default: 200)",
    Value = tostring(_G.RapidCalls),
    Callback = function(v)
        local n = tonumber(v)
        if n and n >= 1 and n <= 500 then
            _G.RapidCalls = n
        end
    end,
})

Fish10:Input({
    Title = "Slow Calls",
    Description = "Jumlah slow calls per cycle (default: 20)",
    Value = tostring(_G.SlowCalls),
    Callback = function(v)
        local n = tonumber(v)
        if n and n >= 1 and n <= 100 then
            _G.SlowCalls = n
        end
    end,
})

Fish10:Toggle({
    Title = "Auto Equip Rod",
    Default = _G.AutoEquip,
    Callback = function(s)
        _G.AutoEquip = s
    end,
})

Fish10:Toggle({
    Title = "Parallel Mode",
    Default = _G.ParallelMode,
    Callback = function(s)
        _G.ParallelMode = s
    end,
})

Fish10:Toggle({
    Title = "Start Spam Pattern",
    Default = false,
    Callback = function(s)
        if s then
            Protected = true
            FishingSession = FishingSession + 1
            local currentSession = FishingSession
            
            task.spawn(function()
                if _G.ParallelMode then
                    ParallelSpamPattern(currentSession)
                else
                    SpamPattern(currentSession)
                end
            end)
        else
            Protected = false
            FishingSession = FishingSession + 1
        end
    end,
})
